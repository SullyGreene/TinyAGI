{
  "agents": [
    {
      "name": "gemma_agent",
      "module": "gemma_agent",
      "class": "GemmaAgent",
      "source": "local",
      "config": {
        "model_card": "models/gemma-3n-e2b-it.json"
      },
      "modes": {
        "chat": {
          "name": "Chat",
          "system_prompt": "You are a friendly and helpful chat assistant. Your responses should be conversational and informative.",
          "parameters": { "temperature": 0.9 }
        },
        "ide": {
          "name": "IDE Assistant",
          "system_prompt": "You are an expert programmer integrated into an IDE. Provide concise, accurate code and explanations. Prioritize correctness and efficiency.",
          "parameters": { "temperature": 0.2 }
        },
        "canva": {
          "name": "Canva Assistant",
          "system_prompt": "You are a creative design assistant specializing in Canva. Provide innovative design ideas, suggest templates, and help users with their creative projects on Canva."
        }
      }
    },
    {
      "name": "ollama_agent",
      "module": "ollama_agent",
      "class": "OllamaAgent",
      "source": "local",
      "config": {
        "model_card": "models/gemma-2b-it.json",
        "host": "http://localhost:11434"
      },
      "modes": {
        "python_coder": {
          "name": "Python Coder",
          "system_prompt": "You are an expert Python programmer. Only provide Python code, with minimal explanation, inside a single markdown code block.",
          "parameters": { "temperature": 0.0 }
        },
        "json_expert": {
          "name": "JSON Expert",
          "system_prompt": "You are a machine that only outputs valid JSON. Do not include any text outside of the JSON structure."
        }
      }
    },
    {
      "name": "gemini_agent",
      "module": "gemini_agent",
      "class": "GeminiAgent",
      "source": "local",
      "config": {
        "generation_model": "gemini-2.5-flash",
        "embedding_model": "models/embedding-001",
        "parameters": {}
      },
      "modes": {
        "code_reviewer": {
          "name": "Code Reviewer",
          "system_prompt": "You are an expert code reviewer. Analyze the following code for bugs, style issues, and performance improvements. Provide your feedback in a clear, constructive list.",
          "parameters": { "temperature": 0.1 }
        },
        "summarizer": {
          "name": "Summarizer",
          "system_prompt": "You are a professional summarizer. Condense the following text into a concise summary, capturing the key points and main ideas.",
          "parameters": { "temperature": 0.5 }
        }
      }
    },
    {
      "name": "huggingface_agent",
      "module": "huggingface_agent",
      "class": "HuggingFaceAgent",
      "source": "local",
      "config": {
        "model_name": "distilgpt2"
      }
    },
    {
      "name": "openai_agent",
      "module": "openai_agent",
      "class": "OpenAIAgent",
      "source": "local",
      "config": {
        "model": "gpt-5-nano"
      },
      "modes": {
        "pirate": {
          "name": "Pirate",
          "system_prompt": "Talk like a pirate."
        },
        "haiku_writer": {
          "name": "Haiku Writer",
          "system_prompt": "You are a poet that only responds in haikus."
        },
        "teacher": {
          "name": "Teacher",
          "system_prompt": "You are a patient and knowledgeable teacher. Explain complex topics in a simple, clear, and encouraging way. Use analogies and ask questions to check for understanding."
        },
        "roleplay_character": {
          "name": "Roleplay Character",
          "system_prompt": "You are a character in a role-playing game. Stay in character at all times. You are a wise old wizard named Elara, living in a secluded tower. Your responses should be mysterious and filled with ancient wisdom."
        }
      }
    },
    {
      "name": "imagen_agent",
      "module": "imagen_agent",
      "class": "ImagenAgent",
      "source": "local",
      "config": {
        "model": "imagen-4.0-generate-001"
      }
    },
    {
      "name": "veo_agent",
      "module": "veo_agent",
      "class": "VeoAgent",
      "source": "local",
      "config": {
        "model": "veo-3.1-generate-preview"
      }
    },
    {
      "name": "lyria_agent",
      "module": "lyria_agent",
      "class": "LyriaAgent",
      "source": "local",
      "config": {
        "model": "models/lyria-realtime-exp"
      }
    },
    {
      "name": "robotics_agent",
      "module": "robotics_agent",
      "class": "RoboticsAgent",
      "source": "local",
      "config": {
        "model": "gemini-robotics-er-1.5-preview"
      }
    }
  ],
  "plugins": [
    {
      "name": "GenerateText",
      "module": "generate_text",
      "source": "local",
      "config": {
        "prompt_template": "{prompt}"
      }
    },
    {
      "name": "GenerateReferences",
      "module": "generate_references",
      "source": "local",
      "config": {}
    },
    {
      "name": "GenerateTags",
      "module": "generate_tags",
      "source": "local",
      "config": {
        "max_tags": 15
      }
    }
  ],
  "tools": [
    {
      "name": "WikipediaTool",
      "module": "wikipedia_tool",
      "class": "WikipediaTool",
      "source": "local",
      "config": {
        "language": "en",
        "user_agent": "TinyAGI/1.0"
      }
    }
  ],
  "tasks": [
    {
      "task_id": "fetch_and_rewrite_summary_with_gemma",
      "plugin": "GenerateText",
      "agent": "ollama_agent",
      "tool": "WikipediaTool",
      "input": {
        "prompt": "Artificial Intelligence"
      },
      "output": {
        "save_to_file": false
      },
      "options": {
        "stream": false
      }
    },
    {
      "task_id": "generate_with_gemma_api",
      "plugin": "GenerateText",
      "agent": "gemma_agent",
      "tool": null,
      "input": {
        "prompt": "Explain the concept of 'emergence' in complex systems in a simple way."
      },
      "output": {
        "save_to_file": false
      },
      "options": {
        "stream": false
      }
    },
    {
      "task_id": "fetch_and_generate_references",
      "plugin": "GenerateReferences",
      "agent": "ollama_agent",
      "tool": "WikipediaTool",
      "input": {
        "query": "Machine Learning"
      },
      "output": {
        "save_to_file": false
      },
      "options": {
        "stream": false
      }
    },
    {
      "task_id": "rewrite_references",
      "plugin": "GenerateText",
      "agent": "ollama_agent",
      "tool": null,
      "input": {
        "prompt": "Rewrite the following references in APA format:\n\n1. Smith, J. (2020). Understanding AI.\n2. Doe, A. (2019). Machine Learning Basics."
      },
      "output": {
        "save_to_file": false
      },
      "options": {
        "stream": false
      }
    }
  ],
  "modules": []
}
